<%- include("_header") -%>

  <div>
    <canvas id="myChart"></canvas>
    <canvas id="myChart2"></canvas>
    <input type="hidden" id="label" value="<%= label %>">
    <input type="hidden" id="datavar" value="<%= data %>">
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <script>
    var label = document.getElementById("label").value.split(",");
    var datavar = document.getElementById("datavar").value.split(",");
    

    const ctx = document.getElementById('myChart');
    const ctx2 = document.getElementById('myChart2');

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: label,
        datasets: [{
          label: 'Nombre d\'employés par département',
          data: datavar,
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });

    new Chart(ctx2, {
      type: 'doughnut',
      data: {
        labels: label,
        datasets: [{
          label: 'Nombre d\'employés par département',
          data: datavar,
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });



  </script>


  <%- include("_footer") -%>